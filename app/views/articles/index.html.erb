<div style="text-align: center">
  <h1>All articles: </h1>
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class = "list-group-item list-group-item-action">
        <%=link_to article.title, article_path(article.id), class: "btn btn-info"%> -
        <%= link_to "Delete", article_path(article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add a new article", new_article_path, class: "btn btn-secondary" %>
</div>
